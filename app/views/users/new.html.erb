<h2 class="ui center aligned large header">
  Welcome to MessageMe - <em>a complete CHat App</em>
</h2>

<h2 class="ui center aligned icon header">
  <i class="circular orange sign in tiny icon"></i>
  Sign up to start chatting
</h2>


<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <%= form_for(:user, html: { class: "ui form", url: signup_path }) do |f| %>
        <div class="field">
          <%= f.label :username, "Username" %>
          <div class="ui left icon input">
            <%= f.text_field :username, placeholder: "Username" %>
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
          <%= f.label :password, "Password" %>
          <div class="ui left icon input">
            <%= f.password_field :password, placeholder: "Password" %>
            <i class="lock icon"></i>
          </div>
        </div>
        <%= f.button "Sign up", class: "ui orange submit button" %>
      <% end %>
    </div>
    <div class="middle aligned column">
      <%= link_to '<i class="sign in icon"></i> Login'.html_safe, login_path, class: 'ui big orange button' %>
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>